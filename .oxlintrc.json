{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "env": {
    "browser": true,
    "node": true,
    "es2022": true
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-undef": "error"
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "apps/**/dist/",
    "packages/**/dist/"
  ]
}

